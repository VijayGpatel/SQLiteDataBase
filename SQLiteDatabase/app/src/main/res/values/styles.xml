    <style name="theme_dialog" parent="Theme.AppCompat.Light.Dialog">
        <item name="android:windowMinWidthMajor">90%</item>
        <item name="android:windowMinWidthMinor">90%</item>
        <item name="android:theme">@style/AppTheme</item>
    </style>

</resources>
